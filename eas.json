{
  "cli": {
    "version": ">= 5.9.1"
  },
  "build": {
    "base": {
      "node": "18.18.0",
      "npm": {
        "install": {
          "args": ["--legacy-peer-deps"]
        }
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "extends": "base",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {}
  }
}

