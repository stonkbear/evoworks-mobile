{
  "cli": {
    "version": ">= 5.9.1",
    "appVersionSource": "remote"
  },
  "build": {
    "production": {
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "buildConfiguration": "Release",
        "scheme": "App"
      },
      "prebuildCommand": "npm run build && npx cap sync android",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
